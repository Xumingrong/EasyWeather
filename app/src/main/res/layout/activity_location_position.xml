<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/color_5CCC5C"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/location_position_back"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="28dp"
            android:src="@drawable/ic_add_black_48dp" />

        <EditText
            android:id="@+id/location_position_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/shape_recta_bg_search"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入城市名称"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/color_4A4A4A"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location_position_search"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/color_4A4A4A"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="当前城市"
        android:textColor="@color/color_9B9B9B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/location_position_current_location"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/color_FFFFFF"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:padding="20dp"
        android:text=""
        android:textColor="@color/color_4A4A4A"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="热门城市"
        android:textColor="@color/color_9B9B9B"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_position_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>